---
import { Icon } from "astro-icon/components";

export interface Props {
  iconName: string;
  noSeparator?: boolean;
  big?: boolean;
}

const { iconName, noSeparator, big } = Astro.props;
---

<div class="w-full flex flex-col justify-start items-center p-8">
  <div
    class="w-[110px] h-[110px] border-primary border-2 rounded-full flex justify-center items-center text-white mb-8 p-2 bg-primary shadow-primary shadow-[0_0_5px_2px]"
  >
    <Icon name={`mdi:${iconName}`} slot="icon" width={60} height={60} />
  </div>
  <div class="">
    <div class="text-base font-extrabold text-primary text-center relative">
      {
        !noSeparator && (
          <div
            class={`absolute w-[1px] bg-primary ${big ? "h-20" : "h-12"} top-0 -right-8 max-lg:hidden`}
          />
        )
      }

      <slot />
    </div>
  </div>
</div>
