---
import HorizontalSpace from "../HorizontalSpace.astro";
import Service1Image from "../../assets/homepage/service-1.png";
import Service2Image from "../../assets/homepage/service-2.png";
import Service3Image from "../../assets/homepage/service-3.png";
import Service4Image from "../../assets/homepage/service-4.png";
import Service5Image from "../../assets/homepage/service-5.png";
import { Image } from "astro:assets";
import Title from "../Title.astro";
import SubTitle from "../SubTitle.astro";

const services = [
  { title: "Gestión aduanal", image: Service1Image, name: "gestion-aduanal" },
  { title: "carga Marítima", image: Service2Image, name: "carga-maritima" },
  { title: "carga aérea", image: Service3Image, name: "carga-aerea-courier" },
  { title: "courier", image: Service4Image, name: "carga-aerea-courier" },
  {
    title: "servicios de transporte",
    image: Service5Image,
    name: "servicios-transporte",
  },
];
---

<div class="bg-white-light py-12 md:pt-24 md:pb-28">
  <HorizontalSpace>
    <div class="mb-12 md:mb-24">
      <Title>Nuestros Servicios</Title>
      <SubTitle>Comprometidos en brindar soluciones integrales.</SubTitle>
    </div>
    <div class="flex flex-col md:flex-row justify-between items-center w-full">
      {
        services.map(({ image, title, name }) => {
          return (
            <a href={`/gis-webpage/servicios#${name}`}>
              <div
                class={`our-services cursor-pointer flex flex-col items-center justify-center transition-all mb-12 md:mb-0`}
              >
                <div
                  class={`w-[120px] h-[120px] md:w-[180px] md:h-[180px] rounded-full border-4 border-primary overflow-hidden relative mb-4`}
                >
                  <Image src={image} alt={title} />
                  <div
                    class={`our-services-bg absolute top-[-2px] left-[-2px] bg-black w-[calc(100%+4px)] h-[calc(100%+4px)] rounded-full opacity-65`}
                  />
                </div>
                <p
                  class={`our-services-text uppercase font-bold max-w-[220px] text-center text-primary md:text-xl opacity-65`}
                >
                  {title}
                </p>
              </div>
            </a>
          );
        })
      }
    </div>
  </HorizontalSpace>
</div>

<style is:global>
  @media (max-width: 768px) {
    .our-services .our-services-bg {
      opacity: 0;
    }

    .our-services .our-services-text {
      opacity: 100;
    }
  }

  @media (min-width: 768px) {
    .our-services:hover {
      transform: scale(1.3);
    }
    .our-services:hover .our-services-bg {
      opacity: 0;
    }

    .our-services:hover .our-services-text {
      opacity: 100;
    }
  }
</style>
